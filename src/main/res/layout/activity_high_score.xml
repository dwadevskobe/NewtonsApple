<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.stevew.newtons.HighScore"
    android:background="@drawable/back2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My High Scores"
        android:id="@+id/title"
        android:textSize="40dp"
        android:textColor="#0d9cff"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/high1"
        android:layout_marginTop="47dp"
        android:textSize="40dp"
        android:textColor="#0d9cff"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/high2"
        android:textSize="40dp"
        android:textColor="#0d9cff"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/high1"
        android:layout_alignStart="@+id/high1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/high3"
        android:textSize="40dp"
        android:textColor="#0d9cff"
        android:layout_below="@+id/high2"
        android:layout_alignEnd="@+id/high2"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/time1"
        android:textColor="#0d9cff"
        android:layout_marginEnd="29dp"
        android:textSize="20dp"
        android:layout_above="@+id/high2"
        android:layout_alignEnd="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/time2"
        android:textColor="#0d9cff"
        android:layout_alignBottom="@+id/high2"
        android:layout_alignStart="@+id/time1"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/time3"
        android:layout_alignBottom="@+id/high3"
        android:layout_alignStart="@+id/time1"
        android:textColor="#0d9cff"
        android:textSize="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="@drawable/backbutton"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
